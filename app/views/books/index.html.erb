<%= render 'users/userlist', user: @user %>
<%= render '/books/booklist', book: @book %>

   <h2>Books</h2>
    <% @books.each do |book| %>
   
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
     </tr>
    </thead>
    
    <tbody>
     <tr>
       <%= link_to user_path(book.user.id) do %>
       <p><%= image_tag book.user.get_profile_image(80,80) %></p>
       <% end %>
      <%= link_to book_path(book.id) do %>
      <p><%= book.title %></p>
      <% end %>
      <p><%= book.body %></p>
      
    </thead>
   </table>
  </div>
 </div>
</div>
<% end %>