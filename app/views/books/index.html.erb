<%= render 'users/userlist', user: @user, book: @book %>
<%= render '/books/booklist', book: @book %>

<div class="col-md-8 offset-md-1">
<h2>Books</h2>

<table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
      <th colspan="3"></th>
     </tr>
    </thead>
    
     <tbody>
    <% @books.each do |book| %>
     
      <tr>
        <td><%= link_to user_path(book.user.id) do %>
        <p><%= image_tag book.user.get_profile_image(80,80) %></p>
        <% end %></td>
        <td><%= link_to book_path(book.id) do %>
        <p><%= book.title %></p>
        <% end %></td>
        <td>
        <p><%= book.body %></p></td>
      </tr>
    <% end %>
    </tbody>
   </table>
  </div>
