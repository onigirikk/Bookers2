<div class="container">
 <div class="row">
  <div class="col-md-3">
   <h2>User info</h2>
   # ここにuser profile-imageを表示させる

   <table class="tabe">
    <tbody>
     <tr></tr>
     <tr>
      <th>name</th><br>
      <th>introduction</th>
     </tr>
    </tbody>
   </table>
  <div class="row">
   # ここにuser editのボタンをつける
  </div>
  
  <h2 class="mt-3">New book</h2>

  <%= form_with model: @book do |f| %>
 
   <h7>Title</h7><br>
   <%= f.text_field :title %><br>
  
   <h7>Opinion</h7><br>
   <%= f.text_area :body %><br>
  
   <%= f.submit 'Create Book', class: 'btn btn-success' %>
  
   <% end %>

   <h2>Books</h2>
    <% @books.each do |book| %>
   
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
     </tr>
    </thead>
    
    <tbody>
      <p><%= image_tag 'no_image.jpg' %></p>
      <%= link_to book_path(book.id) do %>
      <p><%= book.title %></p>
      <% end %>
      <p><%= book.body %></p>
    </thead>
   </table>
  </div>
 </div>
</div>
 
  <% end %>


