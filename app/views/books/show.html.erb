<div>
 <%= flash[:notice] %>
</div>

<h1>New book</h1>
 <%= form_with model: Book.new do |f| %>
 
 <h4>Title</h4>
  <%= f.text_field :title %>
  
 <h4>Opinion</h4>
  <%= f.text_area :body %>
  
 <br> <%= f.submit 'Create Book' %>
  
 <% end %>

<h2>Book detail</h2>

<div>
 <p><%= image_tag 'no_image.jpg' %></p>
 <p><%= @books.title %></p>
 <p><%= @books.body %></p>
 
 <%= link_to "Edit", edit_book_path(@books.id) %>

 </div>
 
